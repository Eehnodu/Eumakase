<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.db.ContextMapper">
    <!-- Retrieve data for Chart.js -->
    <select id="chartjs" parameterType="com.smhrd.model.MemberVO" resultType="com.smhrd.model.ContextVO">
        SELECT surIdx 
        FROM tb_context
        WHERE memId = #{memId}
    </select>
    
    <select id="getContextIdx" parameterType="com.smhrd.model.MemberVO" resultType="com.smhrd.model.ContextVO">
        SELECT contextIdx
        FROM tb_context
        WHERE memId = #{memId}
    </select>
</mapper>
